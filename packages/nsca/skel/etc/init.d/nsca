#!/bin/bash

### OMD INIT INFO
# PIDFILE:  tmp/run/nsca.pid
# DEPENDS:  CONFIG_NSCA = on
# BINARY:   bin/nsca
# ARGMATCH: etc/nsca/nsca.cfg
### END INIT INFO

cd || exit 1
. etc/omd/site.conf
if [ "$CONFIG_NSCA" != on ] ; then
    exit 5
fi
. lib/omd/init_profile

NAME="NSCA"
DAEMON=$OMD_ROOT/bin/nsca
OPTS="-c $OMD_ROOT/etc/nsca/nsca.cfg"

__generic_init "$*"
