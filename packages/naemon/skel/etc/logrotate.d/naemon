###ROOT###/var/naemon/livestatus.log {
	missingok
	rotate 7
	compress
	delaycompress
	notifempty
	create 640 ###SITE### ###SITE###
}

###ROOT###/var/naemon/naemon.log {
    daily
    rotate 3650
    nocompress
    olddir ###ROOT###/var/naemon/archive
    dateext
    dateformat -%Y%m%d
    missingok
    notifempty
    postrotate
      [ -f ###ROOT###/tmp/run/naemon.pid ] && kill -s USR1 `cat ###ROOT###/tmp/run/naemon.pid`
    endscript
    create 0664 ###SITE### ###SITE###
}

