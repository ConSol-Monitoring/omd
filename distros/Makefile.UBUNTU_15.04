OS_PACKAGES    += libboost-program-options1.55.0
OS_PACKAGES    += libboost-system1.55.0
OS_PACKAGES    += libdbi1
OS_PACKAGES    += libevent-1.4-2
OS_PACKAGES    += libltdl7
OS_PACKAGES    += libnet-snmp-perl
