OS_PACKAGES       =
OS_PACKAGES      += time # needed for mk-job
OS_PACKAGES      += traceroute # needed for Check_MK parent scan
OS_PACKAGES      += boost141-program-options
OS_PACKAGES      += boost141-date-time  # icinga 2
OS_PACKAGES      += boost141-regex      # icinga 2
OS_PACKAGES      += curl
OS_PACKAGES      += dialog
OS_PACKAGES      += expat
OS_PACKAGES      += fping
OS_PACKAGES      += gd
OS_PACKAGES      += graphviz
OS_PACKAGES      += graphviz-gd
OS_PACKAGES      += httpd
OS_PACKAGES      += libevent
OS_PACKAGES      += libmcrypt
OS_PACKAGES      += libtool-ltdl
OS_PACKAGES      += mod_ssl
OS_PACKAGES      += mysql-server
OS_PACKAGES      += net-snmp
OS_PACKAGES      += pango
